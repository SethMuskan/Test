{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["template/.+\\.yaml$"],
      "matchStrings": [
        "apiVersion: *"
      ],
      "datasourceTemplate": "kubernetes-api",
      "currentValueTemplate": "apiVersion: {{value}}",
      "depNameTemplate": "{{match}}"
    }
  ],
  "labels": [
    "renovate"
  ]
}
