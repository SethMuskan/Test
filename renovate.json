{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "helm:*"
      ],
      "depTypeList": [
        "helm"
      ],
      "updateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "allowMajorUpdates": false
    }
  ],
  "helm": {
    "enabled": true,
    "chartPaths": [
      "charts/**/*.{yaml,yml}"
    ]
  }
}
