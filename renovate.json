{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["helm:*"],
      "matchDepTypes": ["helm"],
      "groupName": "helm-charts",
      "schedule": "* * * * *",
      "labels": [
        "dependencies",
        "helm"
      ]
    }
  ],
  "regexManagers": [
    {
      "description": "Updating Helm chart versions",
      "fileMatch": ["^template\\/values\\.yaml$"],
      "matchStrings": [
          "version: (?<currentValue>.*?) # renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?) registryUrl=(?<registryUrl>.*?)\\s"
      ],
      "matchStringsStrategy": "any",
      "datasourceTemplate": "helm"
    }
  ]
}
