{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["helm:*"],
      "matchDepTypes": ["helm"],
      "groupName": "helm-charts",
      "labels": [
        "dependencies",
        "helm"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^templates/.*\\.yaml$"],
      "matchStrings": [
        "apiVersion:\\s*v1beta\\d*\\s*#\\s*DEPRECATED",
        "apiVersion:\\s*v1alpha\\d*\\s*#\\s*DEPRECATED"
      ],
      "datasourceTemplate": "helm",
      "label": "deprecated-api-version"
    }
  ]
}
